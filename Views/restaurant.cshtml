@{
  Layout="Shared/_Layout.cshtml";
}


@if (@Model.Count == 0)
{
  <p>No restaurants have been added yet!</p>
}
else
{
  <h1>Here is your list of restaurant:</h1>
  <ul>
    @foreach (var restaurant in Model)
    {
      <li>@restaurant.GetDescription()</li>
    }
  </ul>
  <form action="/restaurant/delete" method="post">
    <button type="submit">Clear all restaurant</button>
  </form>
}
<p><a href="/restaurant/new">Add a new restaurant</a></p>
<p><a href="/">Return home</a></p>
