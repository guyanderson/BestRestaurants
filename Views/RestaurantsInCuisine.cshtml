@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Here are all the restaurants in this cuisine:</h2>

@if (@Model["restaurant"].Count == 0)
{
  <p>No restaurants have been added yet!</p>
}
else
{
  <ol>
    @foreach (var restaurant in @Model["restaurant"])
    {
      <li>@restaurant.GetName()</li>
    }
  </ol>
}
<p><a href="/restaurant/new">Add a new restaurant</a></p>
<p><a href="/">Return to Main Page</a></p>
